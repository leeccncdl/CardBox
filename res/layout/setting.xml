<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical" >

    <FrameLayout
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/setting_back"
            style="@style/layout_wrap"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/backx" />

        <TextView
            style="@style/layout_full"
            android:gravity="center"
            android:text="@string/setting_title_description"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="8"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="0px" >

            <LinearLayout
                android:background="@drawable/corner_bgx"
                android:id="@+id/setting_recommend_ll"
                style="@style/setting_item_ll" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/set_recommend_application" />

                <TextView
                    style="@style/layout_wrap"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/recommend_app"
                    android:textColor="#817F80"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    style="@style/layout_wrap"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="0px" >

            <LinearLayout
                android:background="@drawable/corner_bgx"
                android:id="@+id/setting_yaoyiyao_ll"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/set_yaoyiyao_download" />

                <TextView
                    style="@style/layout_wrap"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="@string/yaoyiyao"
                    android:textColor="#817F80"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ImageView
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:id="@+id/setting_yaoyiyao_iv"
					style="@style/layout_wrap"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="0px" >

            <LinearLayout
                android:background="@drawable/corner_bgx"
                android:id="@+id/setting_suggestion_ll"
                style="@style/setting_item_ll" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/set_suggestion_feedback" />

                <TextView
                    style="@style/layout_wrap"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/suggestion"
                    android:textColor="#817F80"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    style="@style/layout_wrap"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="0px" >

            <LinearLayout
                android:id="@+id/setting_about_ll"
            	android:background="@drawable/corner_bgx"
                style="@style/setting_item_ll" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/set_about" />

                <TextView
                    style="@style/layout_wrap"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="@string/about"
                    android:textColor="#817F80"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    style="@style/layout_wrap"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="0px" >

            <LinearLayout
                android:id="@+id/setting_quit_ll"
                style="@style/setting_item_ll"
                android:background="@drawable/corner_bg_quitx" >

                <TextView
                    style="@style/layout_wrap"
                    android:text="@string/quit"
                    android:textColor="#FBFBFB"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_setting_iv"
            style="@style/layout_wrap"
            android:clickable="true"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>