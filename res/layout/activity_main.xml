<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_full"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@drawable/play_bg_1"
    >

	<LinearLayout
	    style="@style/layout_vertical"
	    android:layout_weight="1"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp" >
		<ImageView 
		    android:contentDescription="@string/app_name"
		    style="@style/layout_wrap"
		    android:src="@drawable/content_picture"/>		
		<ImageView 
		    android:contentDescription="@string/app_name"
		    style="@style/layout_wrap"
		    android:src="@drawable/collections_view_as_grid"/>
		<TextView 
		    style="@style/layout_wrap"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="@string/title_description"/>
		<ImageView 
		    android:contentDescription="@string/app_name"
		    style="@style/layout_wrap"
		    android:src="@drawable/device_access_mic"/>
		<ImageView 
		    android:contentDescription="@string/app_name"
		    style="@style/layout_wrap"
		    android:src="@drawable/social_share"/>
	</LinearLayout>
	<LinearLayout 
		style="@style/layout_vertical"
		android:layout_weight="8"
		android:orientation="vertical">
		<cn.zytec.lee.gallery.GalleryFlow
		    style="@style/layout_full"
        	android:id="@+id/Gallery"
        	android:layout_gravity="center"
        	android:spacing="0dip"/>
		<GridView 
		    style="@style/layout_full"
		    android:numColumns="3"
		    android:stretchMode="spacingWidth"
		    android:gravity="center"></GridView>
	</LinearLayout>
	<LinearLayout 
		style="@style/layout_vertical"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal">
		<ImageView 
		    android:contentDescription="@string/app_name"
		    style="@style/layout_wrap"
		    android:src="@drawable/main_set_gray48"/>
	</LinearLayout>
</LinearLayout>
